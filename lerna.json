{
	"packages": ["packages/*"],
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"publish": {
			"ignoreChanges": ["*.md"],
			"message": "chore(release): publish"
		},
		"version": {
			"signGitCommit": true,
			"conventionalCommits": true,
			"createRelease": "github"
		}
	},
	"version": "independent",
	"ignoreChanges": [
		"packages/*/tests/**"
	]
}