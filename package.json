{
  "private": true,
  "author": "krmax44 <hi@krmax44.de>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "xo",
    "build": "lerna run build"
  },
  "xo": {
    "extends": [
      "xo-typescript",
      "plugin:prettier/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "no-await-in-loop": "off",
      "@typescript-eslint/no-floating-promises": "off",
      "capitalized-comments": "off"
    },
    "prettier": true
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "bracketSpacing": true,
    "useTabs": true
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "globby": "^11.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "xo": "^0.37.1"
  }
}
